<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ssm.dao.UsersDao">

    <resultMap id="usersMap" type="ssm.domain.Users">
    <id property="id" column="id"></id>
    <result property="username" column="username"></result>
    <result property="password" column="password"></result>
    <result property="realname" column="realname"></result>
    <result property="entrytime" column="entrytime"></result>
    <result property="phone" column="phone"></result>
    <result property="email" column="email"></result>
    <result property="address" column="address"></result>
    <association property="role" javaType="ssm.domain.Role" select="ssm.dao.RoleDao.findRoleByuserid" column="rid">
    </association>
    </resultMap>

    <select id="findByName"  resultMap="usersMap" parameterType="String">
        select * from users where username=#{name}
    </select>

    <select id="findById"  resultType="ssm.domain.Users" parameterType="int">
        select * from users where id=#{id}
    </select>

    <select id="findByNameandRoleId"  resultMap="usersMap">
        select * from users where realname=#{name} and rid=#{roleid}
    </select>

    <select id="findSaleByInfo"  resultMap="usersMap">
        select * from users where rid=#{roleid}
    </select>
    <select id="findByuserNameandRoleId"  resultMap="usersMap">
        select * from users where username=#{name} and rid=#{roleid}
    </select>
    <insert id="addsalers" parameterType="ssm.domain.Users">
        insert into users (username,password,rid,realname,phone,address,entrytime,email) values (#{username},#{password},#{role.id},#{realname},#{phone},#{address},#{entrytime},#{email})
    </insert>

    <update id="editsaler">
        update users set phone=#{phone},address=#{address},email=#{email},entrytime=#{entrytime} where id=#{id}
    </update>

</mapper>
