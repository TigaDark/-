<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ssm.dao.OrdersGoodDao">

    <resultMap id="ordersgoodMap" type="ssm.domain.OrdersGood">
        <id property="id" column="id"></id>
        <result property="quantity" column="quantity"></result>
        <result property="goodstatus" column="goodstatus"></result>
        <result property="ispay" column="ispay"></result>
        <association property="goods" javaType="ssm.domain.Goods">
            <id property="id" column="gid"></id>
            <result property="name" column="name"></result>
            <result property="price" column="price"></result>
            <result property="nums" column="nums"></result>
            <result property="minn" column="minn"></result>
        </association>
    </resultMap>

    <select id="findOrdersGoodBOrdersyId"  resultMap="ordersgoodMap">
        select *,g.id as gid from orders_goods pg,goods g where pg.ordersid=#{id} and goodsid=g.id
    </select>

    <select id="findOrdersIdByid"  resultType="int">
        select ordersid from orders_goods where id=#{id}
    </select>

    <select id="findOrdersGoodById"  resultMap="ordersgoodMap">
        select * from orders_goods pg,goods g where pg.id=#{id} and goodsid=g.id
    </select>

    <update id="editordersGoodstatus">
        update orders_goods set goodstatus=#{status} where id=#{id}
    </update>
    <select id="findOrdersGoodByordersId"  resultMap="ordersgoodMap">
        select * from orders_goods where ordersid=#{id}
    </select>

</mapper>
