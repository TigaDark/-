<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ssm.dao.GoodsQuantityDao">


    <resultMap id="goodsQuantityMap" type="ssm.domain.GoodsQuantity">
        <id property="id" column="id"></id>
        <result property="quantity" column="quantity"></result>
        <result property="goodstatus" column="goodstatus"></result>
        <result property="surplus" column="surplus"></result>
        <association property="goods" javaType="ssm.domain.Goods">
            <id property="id" column="gid"></id>
            <result property="name" column="name"></result>
            <result property="price" column="price"></result>
            <result property="nums" column="nums"></result>
            <result property="minn" column="minn"></result>
        </association>
    </resultMap>

    <select id="findGoodsQuantityByPurchaseId"  resultMap="goodsQuantityMap" parameterType="int">
        select *,g.id as gid from purchase_goods,goods g where purchaseid=#{id} and goodsid=g.id
    </select>

    <select id="findGoodsQuantityById"  resultMap="goodsQuantityMap" parameterType="int">
        select *,g.id as gid from purchase_goods pg,goods g where pg.id=#{id} and goodsid=g.id
    </select>

    <update id="editgoodsstatusByid" parameterType="int">
        update purchase_goods set goodstatus=#{goodstatus} where id=#{id}
    </update>

    <select id="findPurchaseIdByid"  resultType="int" parameterType="int">
        select purchaseid from purchase_goods where id=#{id}
    </select>
    <update id="editsurplusByid">
        update purchase_goods set surplus=#{surplus} where id=#{id}
    </update>

</mapper>
