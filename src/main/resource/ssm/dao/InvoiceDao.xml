<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="ssm.dao.InvoiceDao">
    <resultMap id="invoiceMap" type="ssm.domain.Invoice">
        <id property="id" column="id"></id>
        <result property="issent" column="issent"></result>
        <association property="ordersGood" javaType="ssm.domain.OrdersGood" select="ssm.dao.OrdersGoodDao.findOrdersGoodById" column="orders_goodsid">
        </association>
        <association property="customer" javaType="ssm.domain.Customer" select="ssm.dao.CustomerDao.findCustomerById" column="customerid">
        </association>
    </resultMap>

    <insert id="createInvoice"  keyProperty="id" useGeneratedKeys="true">
        insert into Invoice (issent,orders_goodsid,customerid) values (#{invoice.issent},#{invoice.ordersGood.id},#{customerid})
    </insert>

    <select id="findCustomeridByid"  resultType="int">
        select customerid from invoice where id=#{id}
    </select>
    <select id="findInvoiceByInfo"  resultMap="invoiceMap" >
        select * from invoice
    </select>
    <select id="findInvoiceByid"  resultMap="invoiceMap">
        select * from invoice where id=#{id}
    </select>

    <update id="editissentById" parameterType="int">
        update invoice set issent=#{issent} where id=#{id}
    </update>
</mapper>
